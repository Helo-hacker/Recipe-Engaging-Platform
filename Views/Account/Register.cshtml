@model RecipeSharingApp.Models.User

<style>
    :root {
        --bg-light: #FFF4EE;
        --bg-card: #FFE6D8;
        --accent: #D37C71;
        --accent-dark: #B8655B;
        --text-dark: #4A3B36;
        --text-light: #866A61;
    }

    /* Outer wrapper */
    .register-wrapper {
        max-width: 650px;
        margin: 60px auto;
        background: var(--bg-card);
        padding: 45px;
        border-radius: 28px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.18);
    }

    .register-title {
        font-size: 38px;
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 25px;
        text-align: center;
    }

    /* Inputs */
    .form-control, .form-select {
        height: 52px;
        border-radius: 14px;
        background: #FFF9F6;
        border: 1px solid #f2c9bd;
        font-size: 15px;
        padding-left: 15px;
        transition: 0.25s;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--accent);
        box-shadow: 0 0 8px rgba(211,124,113,0.45);
        background: #fff;
    }

    /* Role card styling */
    .role-option {
        background: #FFF4EE;
        border: 2px solid #F2C9BD;
        border-radius: 18px;
        padding: 18px;
        cursor: pointer;
        transition: 0.3s ease;
    }

    .role-option:hover {
        transform: translateY(-3px);
        border-color: var(--accent);
        background: #FFEFE6;
    }

    .role-option.selected {
        border-color: var(--accent);
        background: #FFE0D3;
        box-shadow: 0 4px 14px rgba(211,124,113,0.35);
    }

    .role-icon {
        font-size: 32px;
        margin-right: 10px;
    }

    /* Register Button */
    .btn-register {
        background: linear-gradient(135deg, #FFAD7A, #D37C71);
        border: none;
        padding: 14px;
        font-size: 18px;
        font-weight: 700;
        border-radius: 14px;
        width: 100%;
        color: white;
        transition: 0.3s;
    }

    .btn-register:hover {
        background: linear-gradient(135deg, #FF9860, #B8655B);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(211,124,113,0.45);
    }
</style>


<div class="register-wrapper">

    <h2 class="register-title">Create Your Account</h2>

    <form method="post">

        <!-- Full Name -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Full Name</label>
            <input class="form-control" name="FullName" placeholder="Enter full name" required />
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input class="form-control" name="Email" type="email" placeholder="example@mail.com" required />
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Password</label>
            <input class="form-control" name="Password" type="password" placeholder="Create password" required />
        </div>

        <!-- ROLE SELECTION -->
        <label class="form-label fw-semibold">Choose Account Type</label>

        <input type="hidden" name="Role" id="RoleInput" value="User" />

        <div class="row g-3 mb-3">

            <!-- Regular User Card -->
            <div class="col-md-6">
                <div class="role-option selected" onclick="selectRole('User', this)">
                    <div class="d-flex align-items-center">
                        <span class="role-icon">üçΩ</span>
                        <div>
                            <strong style="color:var(--text-dark);">Registered User</strong>
                            <p class="m-0 small" style="color:var(--text-light);">
                                Browse & save recipes
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Creator Card -->
            <div class="col-md-6">
                <div class="role-option" onclick="selectRole('Creator', this)">
                    <div class="d-flex align-items-center">
                        <span class="role-icon">üë®‚Äçüç≥</span>
                        <div>
                            <strong style="color:var(--text-dark);">Creator</strong>
                            <p class="m-0 small" style="color:var(--text-light);">
                                Create & publish recipes
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <button class="btn-register mt-2">Register</button>

    </form>

</div>


<script>
    function selectRole(role, el) {
        document.getElementById("RoleInput").value = role;

        document.querySelectorAll(".role-option")
            .forEach(x => x.classList.remove("selected"));

        el.classList.add("selected");
    }
</script>
