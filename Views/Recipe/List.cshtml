@model List<RecipeSharingApp.Models.Recipe>

@{
    ViewBag.Title = "Explore Recipes";
}

<style>

    /* ------------ Page Background ------------ */
    .soft-bg {
        background: linear-gradient(180deg, #fff7ef, #fceee0);
        padding: 50px 0 80px 0;
        min-height: 100vh;
    }

    .page-title {
        font-weight: 800;
        font-size: 40px;
        color: #3c2f2c;
        margin-bottom: 40px;
    }

    /* ------------ Recipe Grid ------------ */
    .recipe-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
        gap: 35px;
    }

    /* ------------ Recipe Card ------------ */
    .recipe-card {
        background: #fff;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.10);
        transition: transform .25s ease, box-shadow .25s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .recipe-card:hover {
        transform: translateY(-6px) scale(1.02);
        box-shadow: 0 14px 28px rgba(0,0,0,0.18);
    }

    /* ------------ Image ------------ */
    .recipe-card img {
        width: 100%;
        height: 240px;
        object-fit: cover;
        display: block;
    }

    /* ------------ Text Section ------------ */
    .recipe-body {
        padding: 22px 25px;
    }

    .recipe-title {
        font-size: 24px;
        font-weight: 700;
        color: #3d2f2c;
        margin-bottom: 10px;
    }

    .recipe-short {
        font-size: 15px;
        color: #6f5e58;
        line-height: 1.6;
        height: 45px;
        overflow: hidden;
    }

    /* ------------ Extra Description Preview ------------ */
    .recipe-desc-preview {
        margin-top: 10px;
        font-size: 14px;
        line-height: 1.5;
        color: #8a7569;
        height: 55px;
        overflow: hidden;
    }

    /* ------------ Badges ------------ */
    .badge-box {
        margin-bottom: 12px;
    }

    .badge {
        display: inline-block;
        padding: 5px 12px;
        font-size: 12px;
        border-radius: 20px;
        margin-right: 8px;
        color: #fff;
    }

    .meal-badge {
        background-color: #ff8f5c;
    }

    .diet-badge {
        background-color: #6fc276;
    }

</style>


<div class="soft-bg">
    <div class="container">

        <h1 class="text-center page-title">Explore Tasty Recipes</h1>

        <div class="recipe-grid">

            @foreach (var r in Model)
            {
                <a href="/Recipe/Details/@r.Id" class="recipe-card">

                    <!-- Image -->
                    <img src="@r.ThumbnailPath" alt="@r.Title" />

                    <!-- Text Body -->
                    <div class="recipe-body">

                        <!-- Badges -->
                        <div class="badge-box">
                            <span class="badge meal-badge">@r.MealType?.Name</span>
                            <span class="badge diet-badge">@r.DietaryFlag?.Name</span>
                        </div>

                        <!-- Title -->
                        <div class="recipe-title">@r.Title</div>

                        <!-- Short Description -->
                        <div class="recipe-short">
                            @r.ShortDescription
                        </div>

                        <!-- Description preview -->
                        <div class="recipe-desc-preview">
                            @(
                                String.IsNullOrWhiteSpace(r.Description) 
                                ? "" 
                                : (r.Description.Length > 120 
                                    ? r.Description.Substring(0, 120) + "..." 
                                    : r.Description)
                             )
                        </div>

                    </div>
                </a>
            }

        </div>

    </div>
</div>
