<style>
    /* ===== HERO ===== */
    .hero-wrapper {
        background: linear-gradient(135deg, #F7DCC8, #E9AFA3);
        padding: 85px 0 120px;
        text-align: center;
        color: #5A3E36;
        border-bottom-left-radius: 50px;
        border-bottom-right-radius: 50px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }
    .hero-title {
        font-size: 42px;
        font-weight: 800;
    }

    /* ===== SEARCH CARD ===== */
    .search-card {
        margin-top: -75px;
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(14px);
        border-radius: 25px;
        padding: 35px;
        box-shadow: 0 12px 28px rgba(0,0,0,0.12);
    }

    .filter-label {
        font-weight: 600;
        color: #774B43;
        margin-bottom: 6px;
    }

    .search-input {
        height: 52px;
        border-radius: 14px;
        border: 1px solid #e6b8ac;
        background: #FFF8F5;
        transition: all .2s ease;
        padding-left: 14px;
        font-size: 16px;
    }
    .search-input:focus {
        border-color: #D37C71;
        box-shadow: 0 0 10px rgba(211,124,113,0.35);
    }

    .small-input {
        height: 48px;
        font-size: 15px;
        border-radius: 12px;
    }

    /* Search Button */
    .btn-search {
        background: #D37C71;
        color: #fff;
        height: 52px;
        border-radius: 14px;
        width: 100%;
        font-weight: 700;
        letter-spacing: 0.4px;
        border: none;
        transition: .25s;
    }
    .btn-search:hover {
        background: #B8655B;
    }
    .tag-input-wrapper {
        background: #FFF8F5;
        border: 1px solid #e6b8ac;
        border-radius: 14px;
        padding: 6px;
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        min-height: 52px;
        align-items: center;
    }

    .tag-input-wrapper:focus-within {
        border-color: #D37C71;
        box-shadow: 0 0 10px rgba(211,124,113,0.35);
    }

    .tag-input {
        border: none;
        outline: none;
        flex: 1;
        min-width: 120px;
        background: transparent;
        font-size: 15px;
        padding: 6px;
    }
    .tag {
        background: #D37C71;
        color: #fff;
        padding: 6px 10px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
        font-weight: 600;
    }

    .tag span {
        cursor: pointer;
        font-weight: bold;
    }
</style>

<!-- ===== HERO ===== -->
<div class="hero-wrapper">
    <h1 class="hero-title">Find Your Perfect Recipe ü´∂</h1>
    <p style="font-size:18px; opacity:0.8;">
        Search dishes by ingredients, meal type, diet preference & cook time!
    </p>
</div>

<!-- ===== SEARCH CARD ===== -->
<div class="container">
    <div class="search-card">

        <form method="get" action="/Recipe/List">

            <!-- ROW 1 ‚Äî Recipe + Ingredient search -->
            <div class="row mb-3">
                <div class="col-md-7">
                    <label class="filter-label">Search Recipe</label>
                    <input type="text" name="search" class="form-control search-input" placeholder="e.g., Pancakes, Curry">
                </div>

                <div class="col-md-5">
                   <label class="filter-label">Search by Ingredients</label>

                    <div class="tag-input-wrapper">
                        <input type="text"
                            id="ingredientInput"
                            class="tag-input"
                            placeholder="Type ingredient and press Enter">
                        <input type="hidden" name="ingredient" id="ingredientHidden">
                    </div>

                </div>
            </div>

            <!-- ROW 2 ‚Äî Meal, Diet, Cook Time + SEARCH BUTTON -->
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="filter-label">Meal Type</label>
                    <select name="mealTypeId" class="form-control search-input">
                        <option value="">Any</option>
                        @foreach (var m in ViewBag.MealTypes)
                        {
                            <option value="@m.Id">@m.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="filter-label">Diet Preference</label>
                    <select name="dietaryId" class="form-control search-input">
                        <option value="">Any</option>
                        @foreach (var d in ViewBag.DietFlags)
                        {
                            <option value="@d.Id">@d.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="filter-label">Cook Time</label>
                    <select name="cookTime" class="form-control search-input">
                        <option value="">Any</option>
                        <option value="15">15 min</option>
                        <option value="30">30 min</option>
                        <option value="45">45 min</option>
                        <option value="60">1 hour</option>
                    </select>
                </div>

                <!-- SEARCH BUTTON in same row -->
                <div class="col-md-3">
                    <button class="btn-search">üîç Search</button>
                </div>

            </div>

        </form>

    </div>
</div>

<script>
    const input = document.getElementById("ingredientInput");
    const hiddenInput = document.getElementById("ingredientHidden");
    const wrapper = input.parentElement;

    let tags = [];

    function updateHiddenInput() {
        hiddenInput.value = tags.join(",");
    }

    function createTag(label) {
        const div = document.createElement("div");
        div.className = "tag";
        div.innerHTML = `${label} <span>&times;</span>`;

        div.querySelector("span").addEventListener("click", () => {
            tags = tags.filter(t => t !== label);
            div.remove();
            updateHiddenInput();
        });

        wrapper.insertBefore(div, input);
    }

    input.addEventListener("keydown", function (e) {
        if (e.key === "Enter" || e.key === ",") {
            e.preventDefault();
            const value = input.value.trim().toLowerCase();
            if (value && !tags.includes(value)) {
                tags.push(value);
                createTag(value);
                updateHiddenInput();
            }
            input.value = "";
        }
    });
</script>
